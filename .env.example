# === TMDB API ===
# Your TMDB v4 API Bearer Token
TMDB_API_TOKEN=your_tmdb_v4_token_here

# === LLM Provider Settings ===
# Options: openai | anthropic | vllm
LLM_PROVIDER=openai

# For OpenAI-compatible APIs (OpenAI, OpenRouter, etc.)
OPENAI_API_KEY=sk-your_openai_key_here
OPENAI_MODEL=gpt-4o-mini

# For Anthropic (if you switch provider)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# For local vLLM server (if you run one)
# VLLM_BASE_URL=http://localhost:8001/v1
# VLLM_MODEL=qwen2.5-7b-instruct

# === Embedding & Reranking ===
EMBED_MODEL=all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# === Elasticsearch ===
ES_URL=http://localhost:9200
ES_INDEX=movies_bm25

# === Qdrant ===
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=movies_vec

# === Monitoring ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# === Feedback Storage ===
FEEDBACK_LOG_PATH=data/feedback.jsonl

# === Misc ===
PYTHONUNBUFFERED=1
